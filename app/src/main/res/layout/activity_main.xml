<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FF32B5BC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#FF000000"
        android:textColor="#FFCDCDCD"
        android:textSize="40sp"
        android:maxLength="46"
        android:padding="10dp"
        android:gravity="right|center_vertical|bottom"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_marginTop="2dp">

    <Button
        android:id="@+id/seven"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:text="7"
        android:onClick="ondigit"
        android:background="#FF005378"/>

    <Button
        android:id="@+id/eight"
        android:layout_marginLeft="2dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="25sp"
        android:text="8"
        android:onClick="ondigit"
        android:background="#FF005378"/>

    <Button
        android:id="@+id/night"
        android:layout_marginLeft="2dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="9"
        android:textSize="25sp"
        android:onClick="ondigit"
        android:background="#FF005378"/>


    <Button
        android:id="@+id/divide"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="/"
        android:textSize="25sp"
        android:onClick="operator"
        android:background="#FF005378"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#FF005378"
            android:onClick="ondigit"
            android:text="4"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/five"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="25sp"
            android:onClick="ondigit"
            android:background="#FF005378"/>

        <Button
            android:id="@+id/six"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="25sp"
            android:onClick="ondigit"
            android:background="#FF005378"/>


        <Button
            android:id="@+id/multiply"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="25sp"
            android:onClick="operator"
            android:background="#FF005378"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25sp"
            android:onClick="ondigit"
            android:background="#FF005378"/>

        <Button
            android:id="@+id/two"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="25sp"
            android:onClick="ondigit"
            android:background="#FF005378"/>

        <Button
            android:id="@+id/three"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25sp"
            android:onClick="ondigit"
            android:background="#FF005378"/>


        <Button
            android:id="@+id/minus"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="25sp"
            android:onClick="operator"
            android:background="#FF005378"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#FF005378"
            android:onClick="decimal"
            android:text="."
            android:textSize="25sp"/>


        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_marginLeft="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF005378"
            android:onClick="ondigit"
            android:text="0"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/CLR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#FF005378"
            android:onClick="clearer"
            android:text="CLR"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/plus"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="25sp"
            android:onClick="operator"
            android:background="#FF005378"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:text="="
            android:onClick="equalto"
            android:textSize="25sp"
            android:background="#FF005378"/>

    </LinearLayout>

</LinearLayout>